<form asp-action="Store" asp-controller="Categories" asp-area="Admin">
    <div class="form-group my-3">
        <label asp-for="Name"></label>
        <input class="form-control" placeholder="Enter Name" asp-for="Name">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="form-group my-3">
        <label asp-for="Description"></label>
        <input class="form-control" placeholder="Enter Description" asp-for="Description">
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    <button type="submit" class="btn btn-block btn-dark btn-flat">Submit</button>
</form>