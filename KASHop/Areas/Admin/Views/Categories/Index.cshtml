@model List<Category>

<table class="table table-hover text-nowrap">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in @Model)
        {
            <tr>
            <td>@category.Id</td>
            <td>@category.Name</td>
            <td>@category.Description</td>
            <td>
                <a href="#" class="btn btn-outline-info">Details</a>
                <a href="/Admin/Categories/Edit/@category.Id" class="btn btn-outline-warning">Edit</a>
                <a href="/Admin/Categories/Remove/@category.Id" class="btn btn-outline-danger">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

<a href="/Admin/Categories/Create" class="btn btn-outline-dark my-3">Create New Category</a>